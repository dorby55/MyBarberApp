<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/logoutFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="Log Out"
            android:src="@drawable/baseline_exit_to_app_24"
            android:tint="@color/white"
            app:backgroundTint="@android:color/transparent"
            android:alpha="0.7"
            android:elevation="8dp" />

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello user"
            android:textSize="50sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/light_blue"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Services:"
            android:gravity="center"
            android:textColor="@color/light_blue"
            android:textSize="24sp"
            android:layout_marginBottom="20dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">

            <FrameLayout
                android:id="@+id/service1"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/service1Front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hair Coloring"
                    android:background="@drawable/custom_btn_user"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/service1Back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_hair_coloring"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/service2"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_gravity="end">

                <Button
                    android:id="@+id/service2Front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hair Styling"
                    android:background="@drawable/custom_btn_user"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/service2Back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_hair_styling"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/service3"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/service3Front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Beard Trim"
                    android:background="@drawable/custom_btn_user"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/service3Back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_beard_trim"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/service4"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_gravity="end">

                <Button
                    android:id="@+id/service4Front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Shampoo"
                    android:background="@drawable/custom_btn_user"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/service4Back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_shampoo"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myBookings"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/myBookingsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="My Bookings"
                    android:background="@drawable/custom_button"
                    android:gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/makeNewBooking"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_gravity="end">

                <Button
                    android:id="@+id/makeNewBookingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Make A New Booking"
                    android:background="@drawable/custom_button"
                    android:gravity="center" />
            </FrameLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>